@model COMP003B.Assignment7.Models.Actor

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Actor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>

<!-- Display all of the directors for actors -->
<div class="col-md-4">
    <h4>Directors</h4>
    <ul>
        @foreach (Director director in ViewBag.Directors)
        {
            <li>@director.Name</li>
        }
    </ul>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ActorId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
