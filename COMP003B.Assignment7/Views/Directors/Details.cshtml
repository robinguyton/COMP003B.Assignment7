@model COMP003B.Assignment7.Models.Director

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Director</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>

<!-- Display all of the actors in the movies-->
<div class="col-md-4">
    <h4>Actors</h4>
    <ul>
        @foreach (Actor actor in ViewBag.Actors)
        {
            <li>@actor.Name</li>
        }
    </ul>


</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.DirectorID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
